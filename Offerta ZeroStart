  <script src="https://unpkg.com/reveal.js@5/dist/reveal.js"></script>
  <script>
    // Config "Canva-like": 16:9, layout stabile, ottimo anche per stampa PDF via ?print-pdf
    // (La guida ufficiale per export PDF è qui) https://revealjs.com/pdf-export/  :contentReference[oaicite:1]{index=1}
    Reveal.initialize({
      width: 1920,
      height: 1080,
      margin: 0.04,
      minScale: 0.2,
      maxScale: 1.2,
      transition: 'fade',
      backgroundTransition: 'fade',
      controls: true,
      progress: true,
      hash: true
    });

    const CAL_LINK = "https://calendar.app.google/uFHDD9vTSKsrS3dp7";

    function wireCopy(btnId, toastId){
      const btn = document.getElementById(btnId);
      const toast = document.getElementById(toastId);
      if(!btn || !toast) return;

      btn.addEventListener("click", async () => {
        try{
          await navigator.clipboard.writeText(CAL_LINK);
          toast.classList.add("show");
          setTimeout(() => toast.classList.remove("show"), 1400);
        }catch(e){
          // Fallback: prompt
          window.prompt("Copia il link:", CAL_LINK);
        }
      });
    }

    wireCopy("copyLinkBtn1", "toast1");
    wireCopy("copyLinkBtn2", "toast2");
    wireCopy("copyLinkBtn3", "toast3");

    // Extra: tasto "C" per aprire calendario (interattività veloce in presentazione)
    document.addEventListener("keydown", (e) => {
      if(e.key.toLowerCase() === "c"){
        window.open(CAL_LINK, "_blank", "noopener,noreferrer");
      }
    });
  </script>
